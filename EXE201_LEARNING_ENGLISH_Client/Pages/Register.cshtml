@page
@model EXE201_LEARNING_ENGLISH_Client.Pages.RegisterModel
@{
}

<!-- Register start -->
<div class="container-fluid bg-registration py-5" style="margin: 90px 0;">
    <div class="row align-items-center justify-content-center">
        <!-- Center the content horizontally -->
        <div class="col-lg-5">
            <div class="card border-0">
                <div class="card-header bg-light text-center p-4">
                    <h1 class="m-0">Login</h1>
                </div>
                <div class="card-body rounded-bottom bg-primary p-5">
                    <form method="post">
                        <div class="form-group">
                            <input asp-for="RegisterViewModel.Name" type="text" class="form-control border-0 p-4" placeholder="Name" required="required" />
                        </div>
                        <div class="form-group">
                            <input asp-for="RegisterViewModel.Email" type="text" class="form-control border-0 p-4" placeholder="Email" required="required" />
                        </div>
                        <div class="form-group">
                            <input asp-for="RegisterViewModel.Password" type="password" class="form-control border-0 p-4" placeholder="Password" required="required" />
                        </div>                        
                        <div class="form-group">
                            <input asp-for="RegisterViewModel.Birthday" type="date" class="form-control border-0 p-4" placeholder="Birthday" required="required" />
                        </div>                        
                        <div class="form-group">
                            <input asp-for="RegisterViewModel.Address" type="text" class="form-control border-0 p-4" placeholder="Address" required="required" />
                        </div>                        
                        <div class="form-group">
                            <input asp-for="RegisterViewModel.District" type="text" class="form-control border-0 p-4" placeholder="District" required="required" />
                        </div>
                        <div class="form-group">
                            <input asp-for="RegisterViewModel.City" type="text" class="form-control border-0 p-4" placeholder="City" required="required" />
                        </div>
                        <div class="form-group">
                            <input asp-for="RegisterViewModel.PhoneNumber" type="text" class="form-control border-0 p-4" placeholder="Phone number" required="required" />
                        </div>
                        <div class="form-group">
                            <select asp-for="RegisterViewModel.Gender" class="form-control">
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <select asp-for="RegisterViewModel.Role" class="form-control">
                                <option value="1">Student</option>
                                <option value="2">Teacher</option>
                            </select>
                        </div>
                        <div>
                            <button class="btn btn-dark btn-block border-0 py-3" type="submit">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Register End -->